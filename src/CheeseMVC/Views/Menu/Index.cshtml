@using CheeseMVC.Models
@model IList<Menu>

<h1>List of Menus</h1>


@foreach (var menu in Model)
{
    <ul>
        <li><a asp-controller="Menu"
               asp-action="ViewMenu"
               asp-route-id="@menu.ID">@menu.Name</a>
        </li>
    </ul>
}

<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>